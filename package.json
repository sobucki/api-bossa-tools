{
  "name": "api-bossa-tools",
  "version": "1.0.0",
  "description": "Typescript API with Node.js",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "ts-node-dev 'src/index.ts'",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test": "yarn lint && yarn style:check && yarn test:unit && yarn test:functional",
    "test:unit": "jest --passWithNoTests",
    "test:functional": "jest --projects ./test --detectOpenHandles --forceExit --runInBand",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Rafael Sobucki",
  "license": "ISC",
  "devDependencies": {
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.8",
    "@types/express-pino-logger": "^4.0.2",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^26.0.15",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.7.36",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.14.5",
    "@types/pino": "^6.3.3",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "jest": "^26.6.1",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.3",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "body-parser": "^1.19.0",
    "config": "^3.3.2",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.3.6",
    "express-pino-logger": "^5.0.0",
    "http-status-codes": "^2.1.4",
    "module-alias": "^2.2.2",
    "mongoose": "^5.10.11",
    "pino": "^6.6.1",
    "swagger-ui-express": "^4.1.4"
  }
}
